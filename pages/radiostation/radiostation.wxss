.RadioStationcontainer{
  background-color: #2a97f127;
}

/* 头部 */
.header {
  width: 100%;
  height: 350rpx;
}

.header image {
  width: 100%;
  height: 100%;
 
}

.RadioStationcontainer .header .words {
  position:absolute;
  left: 30%;
  top:15%;
  font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
  width: 300rpx;
  height: 50rpx;
  text-align: center;
  line-height: 0rpx;
  color: hsla(300, 65%, 52%, 0.863);
  background-color: rgba(131, 125, 125, 0.5);
  border-radius: 50rpx;
  font-size: 60rpx;
}
.words .ni {
  font-size: 80rpx;
  font-family:cursive;
}

.words .ting1 {
  font-size: 80rpx;
  font-family: cursive;
}

/* scroll */
.statioscroll{
  position: relative;
  top: -20rpx;
  border-radius: 20rpx;
  padding: 0,20rpx;
  background-color: #fff;
}
.scrollitem {
  display: flex;
  position: relative;
  margin-bottom: 20rpx;
  flex-direction: column;
}

.scrollitem image {
  width: 100%;
  border-radius: 20rpx;
}

.stadioinfo{
  display: flex;
  flex-direction: column;
  margin-right: 20rpx ;
}

.RadioStationcontainer .scrollitem .iconfont{
  position:absolute;
  left: 3%;
  top:79%;
  width: 220rpx;
  height: 45rpx;
  background-color: rgba(179, 177, 177, 0.432);
  border-radius: 40rpx;
  font-size: 30rpx;
}

.stadioinfo text{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 36rpx;
  font-family:cursive;
  max-width: 100%;/*最长文本长度*/
  white-space: nowrap;/*不允许换行*/
  overflow: hidden;/*超过部分隐藏*/
  text-overflow: ellipsis;/*超过部分换为省略号*/
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 5rpx;
  color:rgba(18, 20, 26, 0.938);
}